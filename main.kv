#:kivy 2.1.0
<TestWidget>
   
    GridLayout:
        cols:1
        rows:2
        size:root.width,root.height

        
        Image:
            source: "Photos\\jarivs_app_photo.png"
            size_hint:None,None
            size:800,600
            pos_hint: None,None
            pos:100,150

            Label:
                id:label
                text : "Hello Sir!"
                color:25,250,0,1.0
                bold:True
                size_hint:None,None
                size:800,1100
                center_x:self.parent.center_x 
                center_y:self.parent.center_y + 250
                font_size:50
            Label:
                id:status
                text: "status : listening"
                bold:True
                font_size:20
                center_x:self.parent.center_x - 200
                center_y:self.parent.center_y - 250
        
            Button:
                size_hint:None,None
                size:100,100
               
                background_color:0,0,0,0
                on_press: root.Terminate()


                Image:
                    source: "Photos\\jarvis_close.png"
                    center_x:self.parent.center_x
                    center_y:self.parent.center_y

            Button:
                size_hint:None,None
                size:550,550
                background_color:0,0,0,0
                center_x:self.parent.center_x
                center_y:self.parent.center_y - 250
                
                on_press: root.Stop()

                AsyncImage:
                    source: "https://i.imgur.com/fbbjyE2.png"
                    center_x:self.parent.center_x
                    center_y:self.parent.center_y

            Button:
                size_hint:None,None
                size:100,100
                pos_hint: None,None
                pos:700,0

                background_color:0,0,0,0
                on_press:root.Reboot()

                Image:
                    source:"Photos\\jarvis_reboot.png"
                    center_x:self.parent.center_x
                    center_y:self.parent.center_y


      

                    
            